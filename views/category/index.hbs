<h1>{{title}}</h1>
<p>Welcome to {{title}} <a href="/category/add">Add category</a></p>
<a href="/product">Product</a>
{{#if categoryList}}
<table style="border-collapse: collapse; width: 100%;">
    <thead>
        <tr style="border: 1px solid black;">
            <th style="text-align:left; padding:8px;">Category Name</th>
            <th style="text-align:left; padding:8px;">Category Description</th>
            <th style="text-align:left; padding:8px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each categoryList}}
        <tr style="border: 1px solid #ddd;">
            <td style="padding:8px;"><a href="/category/detail/{{_id}}">{{name}}</a></td>
            <td style="padding:8px;">{{description}}</td>
            <td style="padding:8px;"><a href="/category/edit/{{_id}}">Edit</a></td>
            <td style="padding:8px;"><a href="/category/delete/{{_id}}" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>No categories found.</p>
{{/if}}
