<form action="/auth/login" method="POST" class="login-form" autocomplete="off" novalidate>
    {{#if error}}
        <div role="alert" class="error">{{error}}</div>
    {{/if}}

    {{#if csrfToken}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    {{/if}}

    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" name="username" type="text" required autofocus placeholder="Your username" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" required placeholder="Your password" />
    </div>

    <div class="form-actions">
        <button type="submit">Log in</button>
        <a href="/auth/register" class="link">Register</a>
    </div>
</form>